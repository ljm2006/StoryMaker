<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="@dimen/general_list_item_height"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/general_list_item_height">

        <ImageView
            android:id="@+id/img_delete"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_delete"
            android:layout_alignParentEnd="true"
            android:scaleType="center"
            android:padding="@dimen/horizontal_margin_activity"
            />

        <ImageView
            android:id="@+id/img_more"
            android:layout_toLeftOf="@id/img_delete"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_setting"
            android:scaleType="center"
            android:padding="@dimen/horizontal_margin_activity"
            />

        <TextView
            android:id="@+id/text_res_name"
            android:layout_toLeftOf="@id/img_more"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/horizontal_margin_activity"
            android:text="리소스 이름"
            android:maxLines="1"
            android:ellipsize="end"
            />
    </RelativeLayout>

</LinearLayout>